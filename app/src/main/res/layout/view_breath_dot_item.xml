<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_white_corners">

        <View
            android:id="@+id/view_color"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/hold_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="HoldStep"
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_hold_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/hold_step"
            android:text="0ms"
            android:textColor="@color/text_333" />

        <TextView
            android:id="@+id/change_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hold_step"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="ChangeStep"
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_change_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/hold_step"
            android:layout_toEndOf="@id/change_step"
            android:text="0ms"
            android:textColor="@color/text_333" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_edit"
            android:background="@drawable/btn_edit"
            android:layout_toStartOf="@id/btn_del"
            android:text="Edit"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_del"
            android:background="@drawable/btn_del"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="Del"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>